{% extends "master.html.twig" %}

{% block title %}
    Data processor
{% endblock %}


{% block content %}

 <div class="center">
            <h3 class="text-center"> Data processor </h3>
            <form action='save' method="POST">

                <div class="form-group row text-center mt-5 ">

                    <label for="provider" class="col-sm-2 col-form-label col-form-label-sm">
                        Get data from:
                    </label>
                    <div class="col-sm-10">

                        <select name="provider" class='form-control' id="provider">
                            <option value=""> All available sources </option>
                            {% for provider in providers%}
                            <option value="{{provider.name}}"> {{provider.name}} </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="form-group row text-center mt-5  ">
                    <label for="saver" class="col-sm-2 col-form-label col-form-label-sm">
                        Doing process on data:
                    </label>
                    <div class="col-sm-10">

                        <select name="processoor" class="form-control" id="saver">
                            <option value="db">nothing (plain) </option>
                        </select>
                    </div>
                </div>

                <div class="form-group row text-center mt-5  ">
                    <label for="saver" class="col-sm-2 col-form-label col-form-label-sm">
                        Save data to:
                    </label>
                    <div class="col-sm-10">

                        <select name="saver" class="form-control" id="saver">
                            <option value="db">Database </option>
                            <option value="file">File </option>
                        </select>
                    </div>
                </div>

                <div class="text-center mt-5 ">
                    <button class="btn btn-danger"> submit </button>

                </div>
            </form>
        </div>

{% endblock  %}
